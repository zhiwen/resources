<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.resources.dal.mapper.ResourceInfoMapper">
	
	<resultMap type="com.resources.dal.module.ResourceInfoDO" id="resourceInfoDO">
		<result property="id" column="id" javaType="long" jdbcType="INTEGER"/>
		<result property="title" column="title"/>
		<result property="description" column="description"/>
		<result property="cid" column="cid"/>
		<result property="bizType" column="biz_type"/>
		<result property="attachment" column="attachment"/>
		<result property="viewCounts" column="view_ounts"/>
		<result property="downloadCounts" column="download_counts"/>
		<result property="status" column="status"/>
		<result property="createTime" column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
		<result property="modifiedTime" column="modified_time" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
	</resultMap>
	
	<insert id="addresourceInfoDO" parameterType="resourceInfoDO" useGeneratedKeys="true" keyProperty="id">
		insert into resource_info(title,description,cid,biz_type,attachment,view_ounts,download_counts,status,create_time,modified_time) 
		values(#{title},#{description},#{cid},#{bizType},#{attachment},#{viewCounts},#{downloadCounts},#{status},#{createTime},#{modifiedTime})
	</insert>
	
	<delete id="deleteresourceInfoDO" parameterType="long">
		delete from resource_info where id = #{id}
	</delete>
	
	
	<update id="updateresourceInfoDO" parameterType="resourceInfoDO">
		update resource_info set name = #{name} where id = #{id}
	</update>
	
	
	<!-- 查询单条记录 -->
	<select id="selectUser" parameterType="long" resultMap="resourceInfoDO">
		select * from resource_info where id = #{id}
	</select>
	<!-- 修改记录 -->
	
	<!-- 查询所有记录 -->
	<select id="selectAllUser" resultType="resourceInfoDO">
		select * from resource_info
	</select>
	<!-- 删除记录 -->
	<delete id="deleteUser" parameterType="long">
		delete from resource_info where id = #{id}
	</delete>

</mapper>  